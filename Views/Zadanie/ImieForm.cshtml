@model Lab3_test4.Models.ZadanieModel
@{
    ViewData["Title"] = "Zadanie-ImieForm";
}

<h1 class="display-4">Formularz</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Zadanie" asp-action="ImieForm" method="post">

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>

                <input asp-for="Name" class="form-control" />

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ilosc_Powtorzen" class="control-label"></label>

                <input asp-for="Ilosc_Powtorzen" class="form-control" type="number"/>

                <span asp-validation-for="Ilosc_Powtorzen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>